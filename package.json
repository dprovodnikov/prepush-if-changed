{
  "name": "prepush-if-changed",
  "version": "1.0.0",
  "description": "A tool to execute your commands only for changed files that match your pattern.",
  "main": "src/index.js",
  "bin": {
    "prepush-if-changed": "cli.js"
  },
  "scripts": {
    "build": "rm -rf dist && babel src -d dist --ignore **/*.spec.*",
    "build:watch": "rm -rf dist && babel --watch src -d dist --ignore **/*.spec.*",
    "test": "jest --verbose --passWithNoTests",
    "test:watch": "jest --watch --verbose",
    "test:coverage": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dprovodnikov/prepush-if-changed.git"
  },
  "keywords": [
    "prepush",
    "hook",
    "pattern",
    "changed",
    "commited",
    "git"
  ],
  "author": "Denys Provodnikov <dp.wireden@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/dprovodnikov/prepush-if-changed/issues"
  },
  "homepage": "https://github.com/dprovodnikov/prepush-if-changed#readme",
  "dependencies": {
    "exec-sh": "^0.3.4",
    "git-branch": "^2.0.1",
    "git-changed-files": "^1.0.0",
    "micromatch": "^4.0.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.7",
    "@babel/preset-env": "^7.7.7",
    "babel-polyfill": "^6.26.0",
    "cosmiconfig": "^6.0.0",
    "jest": "^24.9.0"
  }
}
